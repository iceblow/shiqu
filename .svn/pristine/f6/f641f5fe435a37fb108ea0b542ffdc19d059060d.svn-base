body {
  background-color: #ffffff;
  background:url(../imgs/top-bg.png) no-repeat ;
  background-size: 100%;
  font-family:'微软雅黑';
}

.user-circle{
	 background-color: #bec5d7;
	 float:left;
	 width:60px;
	 height:60px;
	 margin-top:20px;
	 padding-left:14px;
	 padding-top:14px;
}

.loginbtn{
	border-radius:0px;
	margin-top:10px;
	background-color:#6097fb;
	border-color:#ffffff;
	color:#ffffff;
	padding:15px 70px;
	font-size:16px;
}

.loginbtn:hover{
	background-color:#4c7ac8;
	color:#ffffff;
}

.top-content{
	width:20%;
	text-align:center;
	margin:20px auto;
	color:#fff;
	padding-top:20px;
	padding-bottom:20px; 
	border: solid #b1cbfa 1px;
}

.form-signin {
  max-width: 470px;
  padding: 15px;
  margin: 0 auto;
  margin-top:2em;
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin .checkbox {
  font-weight: normal;
}
.form-signin .form-control {
  border-radius:0px;
  position: relative;
  height: 60px;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="email"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
