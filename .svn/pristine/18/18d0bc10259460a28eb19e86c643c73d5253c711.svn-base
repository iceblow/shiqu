@CHARSET "UTF-8";

body{
/* 	background:url(../imgs/love_background.png) no-repeat; */
/* 	background-size: cover; */
	font-size: 14px;
	font-family: "微软雅黑";
	padding: 0;
	margin: 0;
}

.top{
	width: 100%; 
	height: 49px;
	position: absolute;
	top: 0px;
	background: #ff8854;
	color: #fff;
}

.store_list{
	position:relative;
	width:100%;
}

.overflow_hidden {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.select_calo{
/* 	color: #ff4532; */
	background-color:#857777;
	color:#ffffff;
}

.bottom_order{
	position: fixed;
	bottom: 0px;
	width: 100%;
	height: 60px;
	background: #756969;
	opacity: 1;
	z-index:10;
	display:none;
}

.fixedposition{
	background-color:#efefef;
	padding-left:3.75%;
	font-size:12px;
	padding-right:3.75%;
	height:34px;
	line-height:34px;
}

.storediv{
	width: 100%;
	height: 92px;
	border-bottom: 1px solid #e5e5e5;
}

.storemarginauto{
	width: 92%;
	height: 92px;
	margin: 0 auto;
}

.categorydiv{
	padding-left:3.75%;
	padding-right:3.75%;
	height: auto;
    overflow: hidden;
}

.categorynum{
/* 	display: block; */
	display:none;
	position: absolute;
	left: 8.5%;
	top: 6px;
	width: 20px;
	height: 12px;
	background: #ff4532; 
	font-size: 11px;
	color: #fff;
	line-height: 12px;
	border-radius: 6px; 
	text-align:center;

}

.menucategory{
	width: 100%;
	height: 50px;
	line-height: 50px;
	font-size: 13px;
	text-align: left;
	padding-left:8.5%
}

.addbtn{
	width: 74px;
	height: 35px;
	margin-top: 12.5px;
	float:right;
	text-align: center;
	line-height: 35px;
	background: #ff8854;
	border-radius: 18px;
	color: #fff;
	cursor: pointer;
	margin-right:12px;
}

.menuaddbtn{
	width: 30px;
	height: 30px;
	float:right;
	font-size: 32px;
	border-radius: 15px;
	border: 1px solid #ebebeb;
	text-align: center;
	line-height: 24px;
	font-weight:bold;
	position:relative;
	right:15px;
}


.topdiv{
	width:50%;
	float:left;
	height:45px;
	line-height:45px;
	box-sizing: border-box;
	text-align:center;
	font-size:15px;
}

.topselect{
	border-bottom: 1px solid #ff8854;
}

.mask{
	position: fixed;
	top: 0px;
	left: 0px;
	right: 0px;
	bottom: 0px;
	opacity: 0.5;
	background: #10090d;
	z-index: 99;
}


.alert{
	border-radius:8px 8px 0px 0px;
	background: #fff;
 	position: fixed;
    top: 50px;
    left:50px;
    z-index: 100;
    padding:0;
    display:none;
    overflow: scroll;
    -webkit-overflow-scrolling: touch; /* ios5+ */
}
